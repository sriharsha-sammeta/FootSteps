<Page
    x:Class="test.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:test"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Button x:Name="Next" Content="Next please" HorizontalAlignment="Left" 
                Height="71" Margin="38,289,0,0" VerticalAlignment="Top" 
                Width="109" Click="Button_Click" />
        <TextBlock x:Name="Registration" HorizontalAlignment="Left" Margin="38,78,0,0" TextWrapping="Wrap" Text="Registration" VerticalAlignment="Top" FontSize="48"/>
        <TextBox x:Name="MobileNumber" HorizontalAlignment="Left" 
                 Margin="38,196,0,0" TextWrapping="Wrap" VerticalAlignment="Top" 
                 Width="253" Height="48" FontSize="18" Foreground="#FF3E3838" 
                 InputScope="TelephoneNumber" PlaceholderText="Enter Your Mobile Number"/>
        <TextBlock x:Name="InvalidNo" HorizontalAlignment="Left" Margin="38,167,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="17" Width="168" Foreground="Red" FontSize="16"/>

    </Grid>
</Page>
